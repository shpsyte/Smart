
@{ ViewData["Title"] = ViewsLocalizer["Produtos e Serviços"]; ViewBag.PageClass = "container"; }
@{ ViewData.AddActivePageApp(ActivePagesApp.Product); }


<h4>@SharedLocalizer["Dados da"] @ViewData["Title"]</h4>
<hr class="myb-4" />
<div class="row">
    <div class="col-12">
        <form asp-action="Edit" method="post" asp-antiforgery="true" class="form-horizontal" enctype="multipart/form-data">
            @{ await Html.RenderPartialAsync("_CreateOrUpdate"); }
            <div class="form-actions text-align-left">
                <div class="row">
                    <div class="col-8">
                        <button asp-route-continueAdd="false" type="submit" class="btn btn-success btn-bdr">
                            <span class="btn-label"></span>@SharedLocalizer["Salvar"]
                        </button>
                        <a asp-action="List" asp-controller="Product" class="btn btn-light btn-bdr"> <span class="btn-label"><i class="glyphicon glyphicon-chevron-left"></i></span>@SharedLocalizer["Voltar"] </a>
                    </div>
                    <div class="col-4">
                        <button asp-route-addTrash="true" type="submit" class="btn btn-danger btn-bdr" onclick="return confirm('Deseja realmente exluir?')">
                            <span class="btn-label"></span>@SharedLocalizer["Excluir"]
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script src="~/js/imgSrcComponent.js"></script>
    <script src="~/js/views/product-createorupdate.js"></script>

}
