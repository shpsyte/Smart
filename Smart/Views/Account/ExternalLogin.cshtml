@model ExternalLoginViewModel
@{
    ViewData["Title"] = "Register";
}
<p class="lead text-center">@LoginLocalizer["Acossie sua conta: "] @ViewData["LoginProvider"] </p>
<hr class="my-4">
<div class="container">
    <div class="row" style="padding:15px">
        <div class="col-md-6">
            <form asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-signin">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-info btn-block">@LoginLocalizer["Register"]</button>
            </form>
        </div>
        <div class="col-md-6" style=" padding: 15px;">
            <h2 class="form-signin-heading">@LoginLocalizer["Use"] @ViewData["LoginProvider"] @LoginLocalizer["para efetuar login."]</h2>
            <p class="text-info">
                @LoginLocalizer["Você foi autenticado usando "] <strong>@ViewData["LoginProvider"]</strong>.
                @LoginLocalizer["Por favor entre um email para este site para terminar o processo de registro."]
            </p>
        </div>
    </div>
</div> <!-- /container -->
