@model LoginWith2faViewModel
@{
    ViewData["Title"] = "Two-factor authentication";
}
<p class="lead text-center">@LoginLocalizer["Seu login esta configurado para usar autenticação dupla. Entre com o código da autenticação abaixo"]</p>
<hr class="my-4">
<div class="container">
    <div class="row" style="padding:15px">
        <div class="col-md-6">
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" class="form-signin">
                <input asp-for="RememberMe" type="hidden" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <label asp-for="TwoFactorCode"></label>
                <input asp-for="TwoFactorCode" class="form-control" autocomplete="off" />
                <span asp-validation-for="TwoFactorCode" class="text-danger"></span>
                <div class="checkbox">
                    <label asp-for="RememberMachine">
                        <input asp-for="RememberMachine" />
                        @Html.DisplayNameFor(m => m.RememberMachine)
                    </label>
                </div>
                <button class="btn btn-lg btn-info btn-block" type="submit">@LoginLocalizer["Entrar"]</button>
                <a asp-action="LoginWithRecoveryCode" asp-route-returnUrl="@ViewData["ReturnUrl"]">@LoginLocalizer["Logar com código de segurança"]</a>.
            </form>
        </div>
        <div class="col-md-6" style=" padding: 15px;">
            @{ await Html.RenderPartialAsync("_SiginAnotherServices"); }
        </div>
    </div>
</div>
