@model Core.Domain.Accounting.TaxOperation
@{ Layout = null; }
@Html.HiddenFor(a => a.TaxOperationId)
@Html.HiddenFor(a => a.BusinessEntityId)
<div class="controls">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name">@Localizer["Nome"]</label>
            <input asp-for="Name" placeholder="@Localizer["Name"]" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="TaxFunction">@Localizer["Funcao"]</label>
            <select asp-for="TaxFunction" asp-items="Html.GetEnumSelectList<Core.Fake.TaxFunctionEnum>()" class="form-control"></select>
            <span asp-validation-for="TaxFunction" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="TaxWay">@Localizer["Caminho"]</label>
            <select asp-for="TaxWay" asp-items="Html.GetEnumSelectList<Core.Fake.TaxWayEnum>()" class="form-control"></select>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="DefaultCode">@Localizer["Codigo Padrão"]</label>
            <input asp-for="DefaultCode" placeholder="@Localizer["DefaultCode"]" class="form-control" />
            <span asp-validation-for="DefaultCode" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="checkbox">
                <label>
                    <input asp-for="StockTrigger" type="checkbox" class="checkbox style-0" />
                    <span><label asp-for="StockTrigger">@Localizer["Atualiza Estoque"]</label></span>
                </label>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="checkbox">
                <label>
                    <input asp-for="CostTrigger" type="checkbox" class="checkbox style-0" />
                    <span><label asp-for="CostTrigger">@Localizer["Atualiza Custo"]</label></span>
                </label>
            </div>
        </div>
    </div>
</div>
