@model Core.Domain.Region.City
   @{ Layout = null; }
    @Html.HiddenFor(a => a.CityId)
<div class="controls">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">@Localizer["Nome"]</label>
                <input asp-for="Name" placeholder="@Localizer["Nome"]" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="MiddleName">@Localizer["Apelido"]</label>
                <input asp-for="MiddleName" placeholder="@Localizer["Apelido"]" class="form-control" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="SpecialCodeRegion">@Localizer["Código IBGE"]</label>
                <input asp-for="SpecialCodeRegion" placeholder="@Localizer["Código IBGE"]" class="form-control" />
                <span asp-validation-for="SpecialCodeRegion" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="StateProvinceId">@Localizer["Estado"]</label>
                  <select asp-for="StateProvinceId" class ="form-control" asp-items="ViewBag.StateProvinceId"></select>
                  <span asp-validation-for="StateProvinceId" class="text-danger"></span>
            </div>
        </div>
</div>
