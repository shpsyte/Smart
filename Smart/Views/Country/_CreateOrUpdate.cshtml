@model Core.Domain.Region.Country
   @{ Layout = null; }
    @Html.HiddenFor(a => a.CountryId)
<div class="controls">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">@Localizer["Nome"]</label>
                <input asp-for="Name" placeholder="@Localizer["Nome"]" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="MiddleName">@Localizer["Apelido"]</label>
                <input asp-for="MiddleName" placeholder="@Localizer["Apelido"]" class="form-control" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="CountryRegionCode">@Localizer["Código da Região"]</label>
                <input asp-for="CountryRegionCode" placeholder="@Localizer["Código da Região"]" class="form-control" />
                <span asp-validation-for="CountryRegionCode" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="SpecialCodeRegion">@Localizer["Códido Especial do país"]</label>
                <input asp-for="SpecialCodeRegion" placeholder="@Localizer["Códido Especial do país"]" class="form-control" />
                <span asp-validation-for="SpecialCodeRegion" class="text-danger"></span>
            </div>
        </div>
</div>
